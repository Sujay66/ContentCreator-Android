<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="3dp"
                    android:background="@drawable/cardbc"
                    app:cardElevation="8dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/headertextslider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="As a Ravel Content Creator I am...."
                        android:textColor="#FF5350"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                    <LinearLayout

                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subheader1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="An Explorer"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I embody the explorer when I travel and I am dedicated to finding the best experiences when I travel"
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subheader2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A Filmmaker"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I have a passion for film making and am striving to improve my work everyday"
                            android:textColor="#FF524E"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subheader3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A Frequent Traveller"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody3"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:text="I understand the most memorable experiences of my travels and want to allow other travelers to follow my journey"
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>


                <Button
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/create_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonbc"
                    android:text="That's me"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
