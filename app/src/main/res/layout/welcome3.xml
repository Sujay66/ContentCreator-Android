<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="3dp"
                    android:background="@drawable/cardbc"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/headertextslider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="My Ravel trip
will be...."
                        android:textColor="#FF5350"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/subheader1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descriptive"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The trip overall is appealing and clearly visualises the culture and experiences in that destination"
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/subheader2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Beautifully captured"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The video I create is cinematic quality and has a strong visual story telling components"
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/subheader3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unique"
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The hidden gem activities and restaurants I highlight are mostly off the beaten path experiences."
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>


                <Button
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/create_trip"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttonbc"
                    android:text="I can do that!"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
