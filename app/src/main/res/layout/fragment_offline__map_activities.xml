 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context="com.raveltrips.contentcreator.Fragments.OfflineFragments.Offline_MapActivitiesFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:src="@drawable/phonenumbericon"
                android:layout_alignTop="@+id/numberfield"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:src="@drawable/cameraicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:textColor="#6B818F"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/icon"
                android:layout_above="@+id/websitetext"
                android:layout_alignStart="@+id/longitudetext" />
            <EditText
                android:layout_width="330dp"
                android:layout_height="25dp"
                android:id="@+id/offlinenamefield"
                android:paddingLeft="8dp"
                android:textColor="#3B474F"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_box_gray"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/namefield"
                android:layout_marginTop="75dp"
                android:src="@drawable/websiteicon"
                android:id="@+id/imageView6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textColor="#6B818F"
                android:textSize="12sp"

                android:id="@+id/longitudetext"
                android:layout_alignTop="@+id/imageView6"
                android:layout_alignStart="@+id/numberfield" />
            <EditText
                android:layout_width="330dp"
                android:layout_height="25dp"
                android:id="@+id/websitetext"
                android:textColor="#3B474F"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:background="@drawable/border_box_gray"
                android:layout_below="@+id/icon"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:id="@+id/descimage"
                android:src="@drawable/editdescriptionicon"
                android:layout_marginTop="31dp"
                android:layout_below="@+id/phonenumber"
                android:layout_alignParentStart="true" />
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/numberfield"
                android:textColor="#6B818F"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/offlinenamefield"
                android:layout_toEndOf="@+id/imageView4" />
            <EditText
                android:layout_width="330dp"
                android:layout_height="25dp"
                android:id="@+id/phonenumber"
                android:textColor="#3B474F"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:background="@drawable/border_box_gray"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/textView2"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#6B818F"
                android:layout_alignTop="@+id/descimage"
                android:layout_alignStart="@+id/numberfield" />
            <EditText
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:id="@+id/descriptiontext"
                android:gravity="top"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:textColor="#3B474F"
                android:focusableInTouchMode="true"
                android:inputType="textMultiLine"
                android:background="@drawable/border_box_gray"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/descimage"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>

