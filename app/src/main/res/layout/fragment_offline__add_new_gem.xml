<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/offlinegem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.raveltrips.contentcreator.Fragments.OfflineFragments.Offline_AddNewGemFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addgemicon"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/hiddengemicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAME"
                            android:layout_gravity="center"
                            android:textColor="#6B818F"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                             />
                    </LinearLayout>

                    <EditText
                        android:layout_marginStart="35dp"
                        android:id="@+id/gemname_offline"
                        android:textColor="#3B474F"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_box_gray" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/addhiddengem" />

                    <TextView
                        android:layout_marginLeft="5dp"
                       android:layout_marginTop="10dp"

                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="#6B818F"
                        android:text="LONGITUDE" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"

                        android:textColor="#6B818F"
                        android:text="LATITUDE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_marginStart="35dp"
                        android:background="@drawable/border_box_gray"
                        android:id="@+id/longitude_offline"

                        android:layout_width="120dp"
                        android:paddingLeft="5dp"
                        android:layout_height="25dp"
                        android:textSize="15sp"/>

                    <EditText
                        android:layout_marginLeft="20dp"

                        android:background="@drawable/border_box_gray"
                        android:id="@+id/latitude_offline"
                        android:layout_width="120dp"
                        android:paddingLeft="5dp"
                        android:textSize="15sp"
                        android:layout_height="25dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/descicon"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/editdescriptionicon" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#6B818F"
                            android:text="DESCRIPTION"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                             />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/gemdescription_offline"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_box_gray"
                        android:gravity="top"
                        android:paddingLeft="15dp"
                        android:textColor="#3B474F"
                        android:textSize="15sp" />
                    <!--           <ProgressBar
                                   android:visibility="gone"
                                   android:id="@+id/progresscheck"
                                   android:layout_marginTop="15dp"
                                   android:layout_gravity="center"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   style="@style/Base.Widget.AppCompat.ProgressBar"
                                   android:progressDrawable="@drawable/progress"/>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
