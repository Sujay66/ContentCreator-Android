<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raveltrips.contentcreator.MainActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pinDropDown"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/navbardropdown" />

        <TextView
            android:layout_marginTop="105dp"
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily=""
            android:text="What's your next Adventure?"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="We are so stoked have you on board the Ravel team and can't wait to see the experiences you are capturing!"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="120dp"
            android:id="@+id/create_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonbc"
            android:padding="10dp"
            android:text="Create A Trip"
            android:textColor="#ffffff" />

