<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.raveltrips.contentcreator.Fragments.MyTripsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/pinDropDown"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/navbardropdown" />

        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/Header"
            android:textColor="#3B474F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="My Trips"
            android:textSize="16sp" />
        <android.support.v7.widget.CardView
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/mytrips_cardview"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardElevation="@dimen/activity_horizontal_margin"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mytripsrecycler"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/creattrip_cardview"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardElevation="@dimen/activity_horizontal_margin"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/create_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:text="Create a trip"

                android:textColor="#FF5350"
                android:textStyle="bold"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>
        </LinearLayout>

</FrameLayout>
