<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.raveltrips.contentcreator.ProfileNewActivity">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/profileheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="My Content Creator Profile"
        android:textColor="#FF5350"
        android:textSize="18sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="134dp"
        android:src="@drawable/plus"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/Gray"
        android:adjustViewBounds="false"
        />

    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/uploadapic"
        android:textColor="#FF5350"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Profile Picture" />


    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Name" />

            <EditText
                android:id="@+id/nametext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/border_box_gray"
                android:focusableInTouchMode="true" >
            <requestFocus></requestFocus>
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/youtubecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="YouTube URL" />

            <EditText
                android:id="@+id/youtubetext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/border_box_gray"
                android:focusableInTouchMode="true" >
            <requestFocus></requestFocus>
        </EditText>
        </LinearLayout>

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quickbioView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Quick Bio" />

            <EditText
                android:id="@+id/quickbioText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/border_box_gray"
                android:focusableInTouchMode="true" >
            <requestFocus></requestFocus>
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:layout_gravity="center"
                android:id="@+id/save_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:text="Save"
                android:layout_weight="0.5" />

            <Button
                android:layout_marginEnd="20dp"
                android:layout_marginStart="30dp"
                android:layout_weight="0.5"
                android:id="@+id/cancel_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
