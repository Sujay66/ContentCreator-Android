<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raveltrips.contentcreator.Fragments.MyGemsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:layout_gravity="start"
            android:id="@+id/toolbar_top"
            style="@style/AppTheme.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1">

            <android.support.v7.widget.SearchView
                android:id="@+id/search_my_trips"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="20dp"
                android:searchIcon="@drawable/searchicon"

                android:layout_weight="0.84" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/numofgems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 gems"
            android:textColor="#A8A8A8"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="12dp" />
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="30dp"
            tools:mockup_opacity="100"
            android:background="@color/LightGrey"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mygemsrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:scrollbars="vertical"/>

    </LinearLayout>


</FrameLayout>
