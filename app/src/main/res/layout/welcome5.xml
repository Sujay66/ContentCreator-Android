<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="3dp"
                    android:background="@drawable/cardbc"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#FF5350"
                        android:id="@+id/headertextslider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="How to's:"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
<!--
                        <TextView
                            android:id="@+id/subheader1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="An Explorer"
                            android:textSize="24sp"
                            android:textStyle="bold" />-->

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/subbody1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Here are few videos to help you better understand the tools we will be providing in this app to document your trip's hidden gems, notebale restaurants and paid activities"
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/subheader2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How To Drop a Pin at Hidden Gem Locations for Your Trip."
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hidden gems are exact gps locations of hard to find spots in the destination you are visiting. Like that waterfall only the locals know or a hidden snorkel spot. As a Content Creator you give your followers and other travelers to discover these places for themselves."
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>




                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subheader3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How To Save Paid Activities and Restuarants to Your Trip."
                            android:textColor="#FF5350"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subbody3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="As a content creator you will also be sharing the favorite paid activities and restuarants you found in the destination your exploring, while providing them insight into your personal experience at these places."
                            android:textColor="#FF5350"
                            android:textSize="16sp" />
                    </LinearLayout>
                <Button
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/create_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/mybutton"
                    android:text="Create a Trip"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
