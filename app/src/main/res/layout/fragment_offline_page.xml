<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raveltrips.contentcreator.Fragments.OfflineFragments.Offline_HomePageFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/topicon"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/save"
            android:layout_marginStart="19dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/navbardropdown" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/offline"
            android:id="@+id/imageView3"
            android:layout_below="@+id/topicon"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youâ€™re Offline"
            android:textSize="25dp"
            android:id="@+id/text1"
            android:textColor="#FF5350"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/OfflineString"
            android:textColor="#FF5350"
            android:layout_marginLeft="30dp"

            android:id="@+id/offlinestring"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:textAlignment="viewStart"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/offlinecontinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonbc"
            android:text="Continue"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/offlinestring"
            android:textColor="#ffffff"

            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
